<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.yademos.someday.fragment.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainfragment_to_diaryfragment"
            app:destination="@id/diaryFragment" />
    </fragment>

    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.yademos.someday.fragment.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary" >
        <action
            android:id="@+id/action_diaryFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="year"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="month"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="day"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="date"
            app:argType="long" />
    </fragment>
</navigation>