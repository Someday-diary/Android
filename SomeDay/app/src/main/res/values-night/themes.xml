<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SomeDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/background_color</item>
        <item name="colorOnPrimary">@color/background_color</item>
        <item name="colorPrimaryDark">@color/background_color</item>
        <item name="navigationIcon">@drawable/ic_back_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorControlActivated">#64BDAA</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>
    <style name="TextColorLightDrawer">
        <item name="android:textColor">@color/textColor_drawer</item>
    </style>
    <style name="BackButtonStroke">
        <item name="android:strokeColor">@color/back_buttonColor_drawer</item>
    </style>
    <style name="TextColorDarkDrawer">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LineForDrawer">
        <item name="android:background">@color/line_drawer</item>
    </style>
    <style name="BackgroundApp">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="AlarmAddButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendar_header">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="calendar_date">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="toolbar_lock">
        <item name="android:background">@drawable/ic_back_dark</item>
    </style>

    <style name="erase_button">
        <item name="android:background">@drawable/ic_erase_button_dark</item>
    </style>

    <style name="text_lock">
        <item name="android:background">@drawable/lock_text_click_animation_dark</item>
        <item name="android:textColor">@color/white_dark_text</item>
    </style>

    <style name="text_lock_center">
        <item name="android:textColor">@color/white_dark_text</item>
    </style>

    <style name="background_lock">
        <item name="android:background">@color/background_color</item>
    </style>

</resources>